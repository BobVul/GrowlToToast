<UserControl x:Class="GrowlToToast.GrowlerInstaller.Views.AdvancedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GrowlToToast.GrowlerInstaller.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel DataContext="{Binding Installations}">
        <StackPanel>
            <Label>
                <TextBlock TextDecorations="Underline">Install location</TextBlock>
            </Label>
            <ListBox ItemsSource="{Binding}" DisplayMemberPath="Target.Name" IsSynchronizedWithCurrentItem="true" BorderThickness="0" Width="100"/>
        </StackPanel>
        <local:InstallationDetailsView DataContext="{Binding}"/>
    </DockPanel>
</UserControl>
